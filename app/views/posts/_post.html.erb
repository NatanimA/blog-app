
<%= link_to user_post_path(post.author.id,post.id), class:'post-link-container',id:post.id do %>
<div class="posts-list-container">
    <h4 class="post-title-header"><%= post.title %> </h4>
    <p class="posts-content">
        <%= post.text %>
    </p>
    <div class="interaction-container">
        <% if can? :delete, post %>
            <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?", turbo_confirm: "Are you sure?" },class: 'counter counter-btn' %>
        <% end %>
        <%= link_to "Add Comment: #{post.comments_counter }" , new_post_comment_path(post.id), class: 'counter counter-btn' %>
        <%= button_to "Likes: #{post.likes_counter}", post_likes_path(post.id), method: :post, remote: true, class: 'counter counter-like-btn'  %>
    </div>
</div>
<% end %>
